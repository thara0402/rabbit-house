{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceNamePrefix": {
            "type": "string"
        }
    },
    "variables": {
        "workspaceName":"[concat(parameters('resourceNamePrefix'), '-la')]",
        "virtualMachineName":"[concat(parameters('resourceNamePrefix'), '-vm')]",
        "actionGroupName":"[concat(parameters('resourceNamePrefix'), '-ag')]",
        "actionGroupShortName":"ag01",

        "action01":{
            "name": "action-thara",
            "emailAddress": "thara@archway.co.jp"
        },
        "alertRule01":{
            "name": "[concat(variables('virtualMachineName'), 'のアラートルール名です')]",
            "description": "[concat(variables('virtualMachineName'), 'のアラートの説明です')]",
            "query": "[format('Perf| where Computer contains \"{0}\"| where ObjectName == \"Processor\"| where CounterName == \"% Processor Time\"| where CounterValue >= 90', variables('virtualMachineName'))]",
            "emailSubject": "[concat(variables('virtualMachineName'), 'のメールの件名です')]",
            "severity": 1

        }
    },
    "resources": [
        {
            "type": "Microsoft.operationalinsights/workspaces",
            "apiVersion": "2015-11-01-preview",
            "name": "[variables('workspaceName')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "sku": {
                    "name": "pergb2018"
                },
                "retentionInDays": 30
            }
        },
        {
            "type": "Microsoft.insights/actionGroups",
            "apiVersion": "2019-03-01",
            "name": "[variables('actionGroupName')]",
            "location": "Global",
            "properties": {
                "groupShortName": "[variables('actionGroupShortName')]",
                "enabled": true,
                "emailReceivers": [
                    {
                        "name": "[variables('action01').name]",
                        "emailAddress": "[variables('action01').emailAddress]",
                        "useCommonAlertSchema": false
                    }
                ]
            }
        },
        {
            "type": "Microsoft.insights/scheduledqueryrules",
            "apiVersion": "2018-04-16",
            "name": "[variables('alertRule01').name]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId(resourceGroup().name, 'Microsoft.operationalinsights/workspaces', variables('workspaceName'))]",
                "[resourceId(resourceGroup().name, 'Microsoft.insights/actionGroups', variables('actionGroupName'))]"
            ],
            "properties": {
                "description": "[variables('alertRule01').description]",
                "enabled": "true",
                "source": {
                    "query": "[variables('alertRule01').query]",
                    "dataSourceId": "[resourceId('Microsoft.operationalinsights/workspaces', variables('workspaceName'))]",
                    "queryType": "ResultCount"
                },
                "schedule": {
                    "frequencyInMinutes": 5,
                    "timeWindowInMinutes": 5
                },
                "action": {
                    "severity": "[variables('alertRule01').severity]",
                    "trigger":{
                        "thresholdOperator":"GreaterThan",
                        "threshold": 1
                    },
                    "aznsAction":{
                        "actionGroup":[
                            "[resourceId('Microsoft.insights/actionGroups', variables('actionGroupName'))]"
                        ],
                        "emailSubject": "[variables('alertRule01').emailSubject]"
                    },
                    "odata.type": "Microsoft.WindowsAzure.Management.Monitoring.Alerts.Models.Microsoft.AppInsights.Nexus.DataContracts.Resources.ScheduledQueryRules.AlertingAction"
                }
            }
        }
    ]
}